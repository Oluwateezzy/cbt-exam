// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String
  password  String
  role      Role     @default(STUDENT)
  createdAt DateTime
  updatedAt DateTime @updatedAt
  examName  ExamName
  exam Exam @relation(fields: [examName], references: [name])
}

model Exam {
  id          String   @id @default(uuid())
  name        ExamName @default(LEVEL100) @unique
  title       String
  description String?
  maxScore    Int?
  courses Course[]
  startDate   DateTime
  endDate     DateTime
  users User[]
}
model Course {
  id           String   @id @default(uuid())
  name         String
  description  String?
  examId String
  exam Exam @relation(fields: [examId], references: [id])
  questions Question[]
  startDate    DateTime
  endDate      DateTime
}

model Question {
  id            String   @id @default(uuid())
  question      String
  point         Int?
  correctAnswer options
  courseId String
  course Course @relation(fields: [courseId], references: [id])
  options Option[]
  examId        String
}

model Option {
  id       String     @id @default(uuid())
  A        String
  B        String
  C        String
  D        String?
  questionId String
  question Question @relation(fields: [questionId], references: [id])
}

enum ExamName {
  LEVEL100
  LEVEL200
  LEVEL300
  LEVEL400

}

enum options {
  A
  B
  C
  D
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}